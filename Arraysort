package javaJAVAPROGRAM;

import org.testng.Assert;
import org.testng.annotations.Test;

public class WordArraysort {
	

	
	public String check(String s)
	{
	String[] st=s.split("\\s");
	String rev="";
	for(String w:st){  
	        StringBuilder sb=new StringBuilder(w);  
	        sb.reverse();  
	        rev+=sb.toString()+" ";  
	    }  
	    return rev.trim();
	}
	
	@Test
	public void test2()
	{
	String s="this is automation testing";
	Assert.assertEquals(check(s), "siht si noitamotua gnitset");
	}
	@Test
	public void test3()
	{
	String s="summer";
	Assert.assertEquals(check(s), "remmus");
	}
	@Test
	public void test4()
	{
	String s="this automation testing";
	Assert.assertEquals(check(s), "siht si noitamotua gnitset");
	}
	@Test
	public void test5()
	{
	String s="summerlion";
	Assert.assertEquals(check(s), "noilremmus");
	}
	
	
	}
